@model TimesheetViewModel
@{
    List<int> content = new List<int> { 1, 2, 3 };
}

<html>
    <head>
       <style>
           .custom{
            margin:2%;
            text-align:center;
           }
           .selector{
                margin-top:1%;
                margin-bottom:1%;
                width:75%;
           }
       </style>
    </head>

    <body class="container">
        <div class="row custom">
        <h4>Timesheet</h4>
    </div>

    <button type="button" class="btn btn-primary ">Add user</button>
    <button type="button" class="btn btn-primary">Add Timesheet</button>
    <select class="form-select selector" aria-label="Default select example">
        <option selected>Select User</option>
        @foreach (var person in Model.ListOfPersons)
        {
            <option value="1">@person.FullName</option>
        }

    </select>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Description</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Total hrs</th>
                <th scope="col">Status</th>                
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var timesheet in Model.ListOfTimesheets)
            {
                <tr>
                    <td>@Model.ListOfPersons.Where(p => p.PersonID == timesheet.PersonID).FirstOrDefault().FullName</td>
                    <td>Notes</td>
                    <td>00/00/0000</td>
                    <td>00/00/0000</td>
                    <td>@timesheet.TotalHours</td>
                    <td>Waiting..</td>                   
                    <td>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr> 
            }
           
        </tbody>
    </table>

    </body>

</html>